<%- include("../partials/header") -%>
<%- include("../partials/navbar") -%>
  <div class="container">
    <h1 class="mb-1 mt-2"><%= article.title %></h1>
    <div class="text-muted mb-2 ">
      <%= article.createdAt.toLocaleDateString() %>
    </div>
    <!-- <a href="/" class="btn btn-secondary">Homepage</a>
    <a href="/" class="btn btn-info">Edit</a> -->
    <div class="show-article min-vh-100">
      <form class="icon-form" action="/articles/<%=article.id%>?_method=DELETE" method="post">
        <button class="icon-button" type="submit"><i class="far fa-trash-alt card-title icons"></i></button>
      </form>
      <form class="icon-form" action="/articles/<%=article.username%>/edit/<%= article.id %>" method="get">
        <button class="icon-button" type="submit"><i class="far fa-edit card-title icons"></i></button>
      </form>
      <%- article.sanitizedHtml %>
    </div>
  </div>
<%- include("../partials/footer") -%>